[Unit]
Description=anime-dl Config Web UI
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=el
Group=el

WorkingDirectory=/opt/anime-dl
Environment=PYTHONUNBUFFERED=1
ExecStart=/opt/anime-dl/.venv/bin/streamlit run web.py --server.port 8501 --server.address 0.0.0.0

Restart=always
RestartSec=5

Environment=VIRTUAL_ENV=/opt/anime-dl/.venv
Environment=PATH=/opt/anime-dl/.venv/bin:/usr/bin:/bin

NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true
ReadWritePaths=/opt/anime-dl

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
